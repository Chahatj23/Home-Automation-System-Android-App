<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EFEFEF">

    <!-- Header with App Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DoorLock Setup"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_marginBottom="24dp"/>

    <!-- User Information Section -->
    <!-- Flat Number, Floor, Block, Name, Phone No, Device ID -->
    <!-- Similar structure to previous design with TextInputLayout and TextInputEditText -->

    <!-- Additional Functionality -->
    <!-- Toggle Button for Enabling/Disabling Lock -->
    <Switch
        android:id="@+id/switch_enable_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Lock"
        android:thumbTint="#4CAF50"
        android:trackTint="#B2DFDB"
        android:layout_marginTop="16dp"/>

    <!-- Button to Open Door -->
    <Button
        android:id="@+id/button_open_door"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Door"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:elevation="4dp"/>

    <!-- Set Up Button -->
    <!-- Similar structure to previous design -->

</LinearLayout>
