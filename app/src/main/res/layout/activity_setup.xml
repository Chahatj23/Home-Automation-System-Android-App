<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EFEFEF">

    <!-- Header with App Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DoorLock Setup"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_marginBottom="24dp"/>

    <!-- User Information Section -->
    <!-- Flat Number -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Flat Number"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_flat_number"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Floor -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Floor">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_floor"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Block -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Block">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_block"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Phone Number -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_phone_number"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Device ID -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Device ID">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Toggle Button for Enabling/Disabling Lock -->
    <Switch
        android:id="@+id/switch_enable_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Lock"
        android:textColor="@color/black"
        android:thumbTint="#4CAF50"
        android:trackTint="#B2DFDB"
        android:layout_marginTop="16dp"/>

    <!-- Button to Open Door -->
    <Button
        android:id="@+id/button_open_door"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Door"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:elevation="4dp"/>

    <!-- Set Up Button -->
    <Button
        android:id="@+id/button_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Up"
        android:backgroundTint="#03A9F4"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:elevation="4dp"/>

</LinearLayout>
